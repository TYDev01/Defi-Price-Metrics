{
  "name": "defiprice-bot",
  "version": "1.0.0",
  "description": "Real-time crypto price streaming bot using DexScreener SSE and Somnia Data Streams",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "crypto",
    "dexscreener",
    "somnia",
    "streams",
    "sse"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@somnia-chain/streams": "^0.11.0",
    "dotenv": "^16.4.5",
    "eventsource": "^2.0.2",
    "viem": "^2.21.1",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/eventsource": "^1.1.15",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
